<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="shugal.com.mattendance.TodayAttendance"
    tools:showIn="@layout/activity_today_attendance">

    <ListView
        android:id="@+id/todayAttendance"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.9"
        android:divider="#000000"
        android:dividerHeight="1dp"
        android:fastScrollAlwaysVisible="false"
        android:fastScrollEnabled="true"
        android:smoothScrollbar="true"></ListView>

    <Button
        android:id="@+id/submitId"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1"
        android:background="#ff21"
        android:text="SUBMIT" />
</LinearLayout>
